<FullAsyncImage>:
    canvas:
        Color:
            rgb: (1, 1, 1)
        Rectangle:
            texture: self.texture
            size: self.width + 20, self.height + 20
            pos: self.x - 10, self.y - 10

<BlankScreen>
    id: blank
    name: 'blank'
    size: root.size

    canvas.before:
        Color:
            rgba: 0, 0, 0, 1
        Rectangle:
            pos: self.pos
            size: self.size

    FullAsyncImage:
        id: artist_art
        source: '{0}/default/wallpapers/bg_tech.png'.format(app.kv_file_dir)

    BoxLayout:
        id: short_cuts
        orientation: 'vertical'
        size_hint: None, None
        height: 400
        width: 400 if root.is_show_controls else 0
        pos: 10, root.height - self.height
        opacity: 1 if root.is_show_controls else 0

        Label:
            size_hint: None, 1
            width: root.width
            halign: 'left'
            valign: 'middle'
            font_size: 18
            text_size: self.size
            text: '[Ctrl] + [q] Close the Application'
        Label:
            size_hint: None, 1
            width: root.width
            halign: 'left'
            valign: 'middle'
            font_size: 18
            text_size: self.size
            text: '[Ctrl] + [s] Restart Spotify.'
        Label:
            size_hint: None, 1
            width: root.width
            halign: 'left'
            valign: 'middle'
            font_size: 18
            text_size: self.size
            text: '[Ctrl] + [r] Reboot the system.'
        Label:
            size_hint: None, 1
            width: root.width
            halign: 'left'
            valign: 'middle'
            font_size: 18
            text_size: self.size
            text: '[Ctrl] + [p] Power off the system.'
        Label:
            size_hint: None, 1
            width: root.width
            halign: 'left'
            valign: 'middle'
            font_size: 18
            text_size: self.size
            text: '[Ctrl] + [m] Restart the MQTT broker.'
        Label:
            text: ''
        Label:
            text: ''
        Label:
            text: ''
        Label:
            text: ''

    # Main Layout
    BoxLayout:
        orientation: 'vertical'

        # Statusbar at the top
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, 1

            Label:
                id: system_message_label
                font_size: 23