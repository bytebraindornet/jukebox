<FullAsyncImage>:
    canvas:
        Color:
            rgb: (1, 1, 1)
        Rectangle:
            texture: self.texture
            size: self.width + 20, self.height + 20
            pos: self.x - 10, self.y - 10

<SpotifyScreen>
    id: spotify
    name: 'spotify'
    size: root.size

    FullAsyncImage:
        id: artist_art
        source: '{0}/default/wallpapers/one_pixel.png'.format(app.kv_file_dir)

    Label:
        canvas.before:
            Color:
                rgba: 0, 0, 0, 0.75
            Rectangle:
                pos: self.pos
                size: self.size

        id: description_label
        font_size: 21
        halign: 'center'
        valign: 'middle'
        text_size: self.size
        text: ""
        size_hint: None, None
        width: app.width
        height: app.height - 300
        pos: 0, app.height - self.height

    # Main Layout, 3 rows
    BoxLayout:
        orientation: 'vertical'
        size_hint: None, None
        width: app.width
        height: app.height

        # Statusbar at the top
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, None

            Label:
                id: system_message_label

            ImageButton:
                id: volume_control_button
                size_hint: None, None
                size: 48, 48
                pos: root.width - self.width -25, root.height - self.height - 25
                source: '{0}/default/48x48/volume-medium.png'.format(app.kv_file_dir)

        # Album art, Artist, Album and Track information
        BoxLayout:
            canvas.before:
                Color:
                    rgba: 0, 0, 0, 0.75
                Rectangle:
                    pos: self.pos
                    size: self.size

            orientation: 'horizontal'
            size_hint: 1, None
            height: 300

            AsyncImage:
                id: album_art
                source: '{0}/default/misc/no_artwork.png'.format(app.kv_file_dir)
                size_hint: None, None
                width: 300
                height: 300

            BoxLayout:
                orientation: 'horizontal'
                size_hint: None, 1
                width: app.width - album_art.width

                BoxLayout:
                    size_hint: None, None
                    height: 200
                    width: app.width
                    orientation: 'vertical'

                    BoxLayout:
                        orientation: 'horizontal'
                        spacing: 10
                        height: 64
                        Image:
                            source: "{0}/default/48x48/music.png".format(app.kv_file_dir)
                            size_hint: None, 1
                            height: 100
                        Label:
                            id: title_label
                            font_size: 36
                            size_hint: None, 1
                            width: app.width / 2
                            halign: 'left'
                            valign: 'middle'
                            text_size: self.size

                    BoxLayout:
                        orientation: 'horizontal'
                        spacing: 10
                        height: 64
                        Image:
                            source: "{0}/default/48x48/music-box-outline.png".format(app.kv_file_dir)
                            size_hint: None, None
                            size: 100, 50
                        Label:
                            id: album_label
                            font_size: 28
                            size_hint: None, 1
                            width: app.width / 2
                            halign: 'left'
                            valign: 'middle'
                            text_size: self.size

                    BoxLayout:
                        orientation: 'horizontal'
                        spacing: 10
                        height: 64
                        Image:
                            source: "{0}/default/48x48/account-music-outline.png".format(app.kv_file_dir)
                            size_hint: None, None
                            size: 100, 50
                        Label:
                            id: artist_label
                            font_size: 28
                            size_hint: None, 1
                            width: app.width / 2
                            halign: 'left'
                            valign: 'middle'
                            text_size: self.size
                            halign: 'left'