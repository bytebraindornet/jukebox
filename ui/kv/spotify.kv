<SpotifyScreen>
    id: spotify
    name: 'spotify'
    size: root.size

    canvas.before:
        Color:
            rgba: 0, 0, 0, 1
        Rectangle:
            pos: self.pos
            size: self.size

    AsyncImage:
        id: artist_art
        source: '{0}/default/wallpapers/one_pixel.png'.format(app.kv_file_dir)

    # Main Layout, 3 rows
    BoxLayout:
        orientation: 'vertical'

        # Statusbar at the top
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, None

            Label:
                id: system_message_label

            ImageButton:
                id: volume_control_button
                size_hint: None, None
                size: 48, 48
                pos: root.width - self.width -25, root.height - self.height - 25
                source: '{0}/default/48x48/volume-medium.png'.format(app.kv_file_dir)

        # Artist, Album and Track information
        BoxLayout:
            canvas.before:
                Color:
                    rgba: 0, 0, 0, 0.75
                Rectangle:
                    pos: self.pos
                    size: self.size

            size_hint: None, None
            height: 200
            width: app.width
            orientation: 'vertical'

            BoxLayout:
                orientation: 'horizontal'
                spacing: 10
                height: 64
                Label: # Spacer
                Image:
                    source: "{0}/default/48x48/music.png".format(app.kv_file_dir)
                    size_hint: None, 1
                    height: 100
                Label:
                    id: title_label
                    font_size: 36
                    size_hint: None, 1
                    width: app.width / 2
                    halign: 'left'
                    valign: 'middle'
                    text_size: self.size

            BoxLayout:
                orientation: 'horizontal'
                spacing: 10
                height: 64
                Label: # Spacer
                Image:
                    source: "{0}/default/48x48/music-box-outline.png".format(app.kv_file_dir)
                    size_hint: None, None
                    size: 100, 50
                Label:
                    id: album_label
                    font_size: 28
                    size_hint: None, 1
                    width: app.width / 2
                    halign: 'left'
                    valign: 'middle'
                    text_size: self.size

            BoxLayout:
                orientation: 'horizontal'
                spacing: 10
                height: 64
                Label: # Spacer
                Image:
                    source: "{0}/default/48x48/account-music-outline.png".format(app.kv_file_dir)
                    size_hint: None, None
                    size: 100, 50
                Label:
                    id: artist_label
                    font_size: 28
                    size_hint: None, 1
                    width: app.width / 2
                    halign: 'left'
                    valign: 'middle'
                    text_size: self.size
                    halign: 'left'

        # Album cover, progressbar and controls
        BoxLayout:
            canvas.before:
                Color:
                    rgba: 0, 0, 0, 0.75
                Rectangle:
                    pos: self.pos
                    size: self.size

            orientation: 'horizontal'
            size_hint: 1, None
            height: 300

            AsyncImage:
                id: album_art
                source: '{0}/default/misc/no_artwork.png'.format(app.kv_file_dir)
                width: 300
                height: 300

            BoxLayout:
                id: controls
                orientation: 'vertical'
                size_hint: None, 1
                width: app.width - (app.width / 3)

                # Controls
                BoxLayout:
                    orientation: 'horizontal'
                    ImageButton:
                        # This control is bind to the function MpdControl.previous() to jump
                        # to the previous song in the playlist. The id mpd_previous_btn is predefined
                        # and mus not be changed.
                        id: previous_btn
                        source: '{0}/default/48x48/skip-previous.png'.format(app.kv_file_dir)

                    ImageButton:
                        # This control is bind to the function MpdControl.toggle_play_pause() to toggle
                        # between play and pause. The id mpd_play_pause_btn is predefined and mus not be
                        # changed.
                        id: play_pause_btn
                        source: '{0}/default/128x128/play-circle-outline.png'.format(app.kv_file_dir)

                    ImageButton:
                        # This control is bind to the function MpdControl.next() to jump to the next song
                        # in the playlist. The id mpd_next_btn is predefined and mus not be changed.
                        id: next_btn
                        source: '{0}/default/48x48/skip-next.png'.format(app.kv_file_dir)

                # Progressbar and time label
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint: None, 1
                    width: root.width
                    spacing: 10
                    Label:
                        size_hint: None, 1
                        width: 30
                        text: "00:00"
                    ProgressBar:
                        id: progress
                        size_hint: None, 1
                        width: controls.width - 100
                    Label:
                        size_hint: None, 1
                        width: 30
                        text: "00:00"